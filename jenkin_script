node {
     stage('SCM Checkout'){
         git credentialsId: 'git-creds', url: 'https://github.com/ManasaNJ/javamavenapp.git'
     }
     stage('Build'){
         sh 'mvn clean package'
     }
     stage('Build Docker Image'){
         sh 'docker build -t manasanj/app1:1.0.0 .'
     }
     stage('Push Docker Image'){
         withCredentials([string(credentialsId: 'docker-hubpass', variable: 'dockerhubpwd')]) {
         sh "docker login -u manasanj -p ${dockerhubpwd}"
      }
         sh 'docker push manasanj/app1:1.0.0'
     }
}
